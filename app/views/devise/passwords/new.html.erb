<%= image_tag asset_path("problem_solver logo.png"), class: "password-new-img mt-5" %>

<div class="password-new">
  <div class="password-new-header d-flex justify-content-center my-4">
    <h2>Forgot your password?</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group row justify-content-center">
        <div class="col-4">
          <div class="password-email">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "text-light" } %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Reset password", class: "btn btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
