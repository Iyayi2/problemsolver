<%= image_tag asset_path("problem_solver logo.png"), class: "session-img mt-5" %>

<div class="session-new">
  <div class="session-header d-flex justify-content-center my-4">
    <h2>Log in</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row justify-content-center">
      <div class="col-4">
        <div class="login-email">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "text-light" }%>
        </div>
        <div class="login-password">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "text-light" } %>
        </div>
        <div class="login-remember">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>
        </div>
      </div>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Log in", class: "btn btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
